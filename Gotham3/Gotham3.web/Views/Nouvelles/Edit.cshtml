@model Gotham3.domain.Nouvelle

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Nouvelle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text_Desc" class="control-label"></label>
                <input asp-for="Text_Desc" class="form-control" />
                <span asp-validation-for="Text_Desc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Link_Media" class="control-label"></label>
                <input asp-for="Link_Media" class="form-control" />
                <span asp-validation-for="Link_Media" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<Status>()" class="form-control">
                    <option selected="selected" value="">Choisir une option</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
